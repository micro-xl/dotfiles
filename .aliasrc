alias clr=clear
alias bat='bat --pager=never'
alias g='git '
alias gr='cd $(git rev-parse --show-toplevel)'
alias gbr='git branch '
alias gst="git status"
alias gad='git add '
alias gmg='git merge '
alias gcm='git commit '
alias gdif='git difftool '
alias gco='git checkout '
alias gop='git open'
alias gpl='git pull origin'
alias gpsh='git push --set-upstream origin $(git branch --show-current)'
alias d='docker '
alias dexc='docker exec -it '
alias dlog='docker logs -f '
alias drm='docker rm '
alias dps='docker ps -a'
alias dimg='docker image'
alias dimgs='docker images'
alias dn='docker network'
alias dv='docker volume'
alias c='cd $(fd --type d --absolute-path . ~ | fzf --preview="fd --hidden --no-ignore -d 1 . {-1}")'
alias p='cd $(cat ~/.bookmarks | fzf | sed "s/~/\/Users\/jinkyuhan/g")'
alias v='cd $(cat ~/.bookmarks | fzf --preview="bat --color=always --plain {-1}" | sed "s/~/\/Users\/jinkyuhan/g") && vim'
alias tm='tmux'
alias showlog='cd ~/Developer/foodandfun/log'
alias dc='docker-compose'
alias oldvim='vim'
alias vim='nvim --listen /tmp/nvim'
alias pi='pnpm install'
alias pu='pnpm update'
alias pb='pnpm build'
alias pif='pnpm install --force'
alias pui='pnpm uninstall'
alias gbrcl='git branch --merged | egrep -v "(^\*|master|main|develop|dev)" | xargs git branch -D'
alias gbrcl:m='git branch --merged | egrep -v "(^\*|master|main|develop|dev)" | xargs git branch -D'
alias gbrcl:um='git branch --no-merged | egrep -v "(^\*|master|main|develop|dev)" | xargs git branch -D'
alias bookmark_add_here='pwd | sed "s/\/Users\/jinkyuhan/~/g" >> ~/.bookmarks'
alias chrome='open $(cat ~/Library/Application\ Support/Google/Chrome/Default/Bookmarks | grep url\": | sed s/\"url\":\ \"//g | sed s/\"//g | sed s/\ //g | fzf)'
alias nvim_clear_swap='rm -f ~/.local/state/nvim/swap/*'
alias user_no='cat ~/.db.json | jq ".user_no.$(echo "alpha\nlive" | fzf)" | pbcopy && echo "user_no copied to clipboard"'
alias ga_no='cat ~/.db.json | jq ".ga_no.$(echo "alpha\nlive" | fzf)" | pbcopy && echo "ga_no copied to clipboard"'
alias curls='cat ~/.curls | fzf | zsh | jq'
alias ls='ls -alG'
alias l='ls -alG'
alias lzgit='lazygit'

clear() {
  command clear
  if [ -n '$TMUX' ]; then
    tmux clear-history
  fi
}
